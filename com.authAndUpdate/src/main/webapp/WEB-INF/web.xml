<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>LoginCheck</servlet-name>
  	<display-name>LoginCheck</display-name>
  	<description></description>
  	<servlet-class>com.authUpdate.webApp.LoginController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>addProduct</servlet-name>
  	<display-name>addProduct</display-name>
  	<description></description>
  	<servlet-class>com.authUpdate.webApp.AddProduct</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>logout</servlet-name>
  	<display-name>logout</display-name>
  	<description></description>
  	<servlet-class>com.authUpdate.webApp.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>productControl</servlet-name>
  	<display-name>productControl</display-name>
  	<description></description>
  	<servlet-class>com.authUpdate.webApp.ProductControllerServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductControllerServlet</servlet-name>
  	<display-name>ProductControllerServlet</display-name>
  	<description></description>
  	<servlet-class>com.authUpdate.webApp.ProductControllerServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>deleteProduct</servlet-name>
  	<display-name>deleteProduct</display-name>
  	<description></description>
  	<servlet-class>com.authUpdate.webApp.DeleteProduct</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>updateProduct</servlet-name>
  	<display-name>updateProduct</display-name>
  	<description></description>
  	<servlet-class>com.authUpdate.webApp.UpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginCheck</servlet-name>
  	<url-pattern>/loginCheck</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>addProduct</servlet-name>
  	<url-pattern>/addProduct</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>logout</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>productControl</servlet-name>
  	<url-pattern>/productControl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductControllerServlet</servlet-name>
  	<url-pattern>/ProductControllerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>deleteProduct</servlet-name>
  	<url-pattern>/deleteProduct</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>updateProduct</servlet-name>
  	<url-pattern>/updateProduct</url-pattern>
  </servlet-mapping>
</web-app>
